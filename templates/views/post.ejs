<!DOCTYPE html>
<html>
<title>posts</title>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
<link rel="stylesheet" href="https://www.w3schools.com/lib/w3-theme-blue-grey.css">
<link rel='stylesheet' href='https://fonts.googleapis.com/css?family=Open+Sans'>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
html, body, h1, h2, h3, h4, h5 {font-family: "Open Sans", sans-serif}
</style>
<body class="w3-theme-l5">


<form action="/post/<%= username %>" method="post">
 <div class="w3-row-padding" style="width: 700px;margin: 0 auto;">
        <div class="w3-col m12">
          <div class="w3-card w3-round w3-white">
            <div class="w3-container w3-padding">
              <h6 class="w3-opacity">Write Post!</h6>
              <input type="text" name="content" style="width: 620px;" class="w3-border w3-padding" placeholder="What's on your mind?">
            
             <p><input type="file" accept="image/*" name="image" id="file"  onchange="loadFile(event)" style="display: none;"></p>
            <p><label for="file"  class="w3-border w3-padding" style="cursor: pointer;">Upload Image</label></p>
            <p><img id="output" width="200" /></p>

            <script>
            var loadFile = function(event) {
                var image = document.getElementById('output');
                image.src = URL.createObjectURL(event.target.files[0]);
            };
            </script>
            <input type="submit" class="w3-button w3-theme" style="background-color:#189e83;width: 100px;" value="Post">

            </div>
          </div>
        </div>
      </div>
</form>
<div style="width: 700px;margin:0 auto;">
<%  if (posts) { %>
  
    <!-- for(let post in userposts){ -->
  <% posts.forEach(userpost => { %>
    <% userpost.forEach(post => { %>
      <div class="w3-container w3-card w3-white w3-round w3-margin" style="width: 680px;"><br>
        <img src="../images/female-avatar.jpg" alt="Avatar" class="w3-left w3-circle w3-margin-right" style="width:65px">
        <span class="w3-right w3-opacity"><%=  post.date %></span>
        <h4><%= post.username %></h4><br>
        <hr class="w3-clear">
        <p><%= post.postContent %></p>
         <!--  <div class="w3-row-padding" style="margin:0 -16px">
            <div class="w3-half">
              <img src="/w3images/lights.jpg" style="width:100%" alt="Northern Lights" class="w3-margin-bottom">
            </div>
            <div class="w3-half">
              <img src="/w3images/nature.jpg" style="width:100%" alt="Nature" class="w3-margin-bottom">
          </div> 
        </div> -->
        <form action="/post/<%= post._id %>?_method=PATCH" method="POST">
          <input type="hidden" name="postid" value=<%= post._id %> >
          
            <% if(post.likes.includes(username)) { %>
          <input type="hidden" name="action" value="unlike">
          <button type="submit" class="w3-button w3-theme-d1 w3-margin-bottom" style="background-color:#189e83;" ><i class="fa fa-thumbs-down"></i> <%= post.likesCount %>  Likes  </button> 
         
           <%} else { %>
            <input type="hidden" name="action" value="like">
            <button type="submit" class="w3-button w3-theme-d1 w3-margin-bottom" style="background-color:#189e83;" ><i class="fa fa-thumbs-up"></i>  <%= post.likesCount %> Likes</button>
          <% } %>
    </form>
         </div>
    <% }); %>  
  <% }); %>  
<% } %>   
</div> 
</body>
</html>
</body>
</html>