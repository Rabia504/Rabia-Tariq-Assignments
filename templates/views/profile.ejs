<html>
<head lang="en">
    <meta charset="UTF-8">
    
    <title>profile</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="http://netdna.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="../css/profile.css">
</head>
<body>
   <h1 class="heading">Profile</h1>
    <div class="container">
        <div class="main-body">
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <% if(user.gender=="female") { %>
                        <img src="../images/female-avatar.jpg" alt="Admin" class="rounded-circle" width="150">
                        <% } %>
                        <% if(user.gender=="male") { %>
                            <img src="../images/male-avatar.jpg" alt="Admin" class="rounded-circle" width="150">

                        <%} if(user.gender=="") { %>
                            <img src="../images/gen-avatar.jpg" alt="Admin" class="rounded-circle" width="150">
                        <% } %>
                        <div class="mt-3">
                          <h4><%= user.username %></h4>
                          <p class="text-secondary mb-1"><%= user.bio %></p><br>
                          <a href="/logout"><button class="btn btn-primary" >Logout</button></a><hr>
                          <!-- <form action="/delete/<%= user._id %>"> -->
                            <a href="/delete/<%= user._id %>?_method=DELETE"><button class="btn btn-primary" >Delete Profile</button></a><br>
                        <!-- </form> -->
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
               
                <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                        <form method="POST" action="/updateinfo?_method=PATCH">
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Full Name</h6>
                        </div>
                        <input  type="text" name="fullname" class="col-sm-9 text-secondary" value=<%= user.fullname %> readonly>
                        </div> 
                      <hr>
                      
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Email</h6>
                        </div>
                        <input  type="text" name="email" class="col-sm-9 text-secondary" value=<%= user.email %> >
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Password</h6>
                        </div>
                        <input  type="password" name="password"  class="col-sm-9 text-secondary" value=<%= user.password %> >
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Phone No.</h6>
                        </div>
                        <input  type="text" name="phone"  class="col-sm-9 text-secondary" value=<%= user.phoneNo %> >
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Gender</h6>
                        </div>
                        <input  type="text" name="gender"  class="col-sm-9 text-secondary" value=<%= user.gender %> >
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Date of Birth</h6>
                        </div>
                        <input  type="text" name="dob"  class="col-sm-9 text-secondary" value=<%= user.dateOfBirth.toLocaleDateString() %>  >
                      
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Bio</h6>
                        </div>
                        <input  type="text" name="bio"  class="col-sm-9 text-secondary" value=<%= user.bio %> >
                      </div>
                      <hr>
                      <input  type="submit" class="col-sm-9 btn btn-primary" value="Edit Profile" >
                    </form>
                    </div>
                  </div>
                </div>
            
              </div>
            </div>
        </div>
    
</body>
</html>